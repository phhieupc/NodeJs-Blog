<div class='mt-4'>
    <h3>Add Course</h3>
    <form method='POST' action='/courses/store' class='mt-4'>
        <div class='mb-3'>
            <label for='name' class='form-label'>Tên khóa học:</label>
            <input type='texttext' class='form-control' id='name' name='name' />
        </div>
        <div class='mb-3'>
            <label for='description' class='form-label'>Mô tả:</label>
            <input type='texttext' class='form-control' id='description' name='description' />
        </div>
        <div class='mb-3'>
            <label for='image' class='form-label'>Ảnh:</label>
            <input type='texttext' class='form-control' id='image' name='image' />
        </div>
        <div class='mb-3'>
            <label for='videoId' class='form-label'>Video:</label>
            <input type='texttext' class='form-control' id='videoId' name='videoId' />
        </div>

        <button type='submit' class='btn btn-primary'>Save </button>
    </form>
</div>