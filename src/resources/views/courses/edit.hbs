<div class='mt-4'>
    <h3>Edit Course</h3>
    <form method='POST' action='/courses/{{course._id}}?_method=PUT' class='mt-4'>
        <div class='mb-3'>
            <label for='name' class='form-label'>Tên khóa học:</label>
            <input type='texttext' class='form-control' id='name' name='name' value='{{course.name}}' />
        </div>
        <div class='mb-3'>
            <label for='description' class='form-label'>Mô tả:</label>
            <input
                type='texttext'
                class='form-control'
                id='description'
                name='description'
                value='{{course.description}}'
            />
        </div>
        <div class='mb-3'>
            <label for='image' class='form-label'>Ảnh:</label>
            <input type='texttext' class='form-control' id='image' name='image' value='{{course.image}} ' />
        </div>
        <div class='mb-3'>
            <label for='videoId' class='form-label'>Video:</label>
            <input type='texttext' class='form-control' id='videoId' name='videoId' value='{{course.videoId}}' />
        </div>

        <button type='submit' class='btn btn-primary'>Save </button>
    </form>
</div>